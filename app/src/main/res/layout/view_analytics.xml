<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_weekly_expenses"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:orientation="vertical">

    <!-- Tabs inside analytics card -->
    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tab_expenses"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/tab_expenses"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/primary_black"
            app:cornerRadius="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@color/secondary_grey"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/tab_income"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/tab_income"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/primary_white"
            app:cornerRadius="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@color/primary_green"/>

    </LinearLayout>

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weekly_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_income"
                android:textColor="@color/primary_grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_weekly_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="381.000 VND"
                android:textColor="@color/primary_black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_weekly_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:padding="12dp"
            android:scaleType="center"
            app:tint="@color/primary_black"
            android:src="@drawable/ic_analytics_24dp" />

    </LinearLayout>

    <!-- Bars row (placeholder without library) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- Mon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="20dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_bar_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textColor="@color/primary_grey"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Tue -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="20dp"
                android:layout_height="120dp"
                android:background="@drawable/bg_bar_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textColor="@color/primary_grey"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Wed -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="20dp"
                android:layout_height="84dp"
                android:background="@drawable/bg_bar_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textColor="@color/primary_grey"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Thu -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="20dp"
                android:layout_height="92dp"
                android:background="@drawable/bg_bar_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:textColor="@color/primary_grey"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Fri (active) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="24dp"
                android:layout_height="148dp"
                android:background="@drawable/bg_bar_active" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textColor="@color/primary_black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Sat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="20dp"
                android:layout_height="116dp"
                android:background="@drawable/bg_bar_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textColor="@color/primary_grey"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Sun -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="20dp"
                android:layout_height="76dp"
                android:background="@drawable/bg_bar_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textColor="@color/primary_grey"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

