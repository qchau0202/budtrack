<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/home_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/app_branding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/img_app_logo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_budtrack"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/app_name"
                android:textColor="@color/primary_black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_notifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:padding="12dp"
            android:scaleType="center"
            app:tint="@color/primary_grey"
            android:src="@drawable/ic_notifications_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:padding="12dp"
            android:scaleType="center"
            app:tint="@color/primary_black"
            android:src="@android:drawable/ic_menu_search"
            app:layout_constraintEnd_toStartOf="@id/btn_notifications"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Total Balance Card container -->
    <LinearLayout
        android:id="@+id/card_total_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_total_balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_balance"
                    android:textStyle="bold"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_total_balance_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4.000.000 VND"
                        android:textColor="@color/primary_black"
                        android:textStyle="bold"
                        android:textSize="32sp" />

                    <ImageButton
                        android:id="@+id/btn_visibility"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_button"
                        android:padding="10dp"
                        android:scaleType="center"
                        app:tint="@color/primary_black"
                        android:src="@drawable/ic_visibility_off_24dp"
                       />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_expenses"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/add_expenses"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/primary_white"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginTop="12dp"
                    app:cornerRadius="24dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="@color/primary_green" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/analytics_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="vn.edu.tdtu.lhqc.budtrack.fragments.AnalyticsFragment"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/transaction_history_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="vn.edu.tdtu.lhqc.budtrack.fragments.TransactionHistoryFragment"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>