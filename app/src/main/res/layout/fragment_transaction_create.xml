<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primary_white"
    android:paddingTop="8dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bottom_sheet_drag_handle"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Header with Title and Cancel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_transaction"
            android:textColor="@color/primary_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/primary_black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tabs: Expense / Income / Loan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tabExpense"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/expense"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/primary_white"
                    app:cornerRadius="20dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="@color/primary_green" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tabIncome"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/income"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/primary_black"
                    app:cornerRadius="20dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="@color/secondary_grey" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tabOthers"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/others"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/primary_black"
                    app:cornerRadius="20dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="@color/secondary_grey" />

            </LinearLayout>

            <!-- Amount Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/amount"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="@string/amount_hint"
                    android:textColor="@color/primary_black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:inputType="numberDecimal"
                    android:padding="0dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/currency_value"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Wallet Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/cardWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="316dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cash"
                        android:textColor="@color/primary_black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_forward_24dp"
                        app:tint="@color/primary_grey" />
                </LinearLayout>
            </LinearLayout>

            <!-- Category Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/cardCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivCategoryIcon"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        app:tint="@color/primary_green" />

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/select_category"
                        android:textColor="@color/primary_grey"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivCategoryArrow"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_forward_24dp"
                        app:tint="@color/primary_grey" />
                </LinearLayout>

                <!-- Category Selection -->
                <LinearLayout
                    android:id="@+id/containerCategorySelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <!-- Category 1: Food -->
                    <LinearLayout
                        android:id="@+id/categoryFood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@drawable/bg_card"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_food_24dp"
                            app:tint="@color/primary_green"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/category_food"
                            android:textColor="@color/primary_black"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <!-- Category 2: Shopping -->
                    <LinearLayout
                        android:id="@+id/categoryShopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@drawable/bg_card"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_shopping_24dp"
                            app:tint="@color/primary_green"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/category_shopping"
                            android:textColor="@color/primary_black"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <!-- Category 3: Transport -->
                    <LinearLayout
                        android:id="@+id/categoryTransport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@drawable/bg_card"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_transport_24dp"
                            app:tint="@color/primary_green"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/category_transport"
                            android:textColor="@color/primary_black"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <!-- Edit Category and Add New Category -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Edit Category -->
                        <LinearLayout
                            android:id="@+id/categoryEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_card"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_edit_square_24dp"
                                app:tint="@color/primary_grey"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/edit_category"
                                android:textColor="@color/primary_grey"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp" />
                        </LinearLayout>

                        <!-- Add New Category -->
                        <LinearLayout
                            android:id="@+id/categoryAdd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_card"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="8dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_add_24dp"
                                app:tint="@color/primary_grey"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/add_new_category"
                                android:textColor="@color/primary_grey"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Subcategory Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_subcategory"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:fadeScrollbars="true">

                    <LinearLayout
                        android:id="@+id/containerSubCategories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Sample subcategory pills - these will be populated dynamically -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/pillSubCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="@string/subcategory_text"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@color/primary_black"
                            app:cornerRadius="20dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="@color/secondary_grey"
                            android:layout_marginEnd="8dp"
                            android:minWidth="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/pillSubCategoryAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="@string/subcategory_add"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@color/primary_grey"
                            app:icon="@drawable/ic_add_24dp"
                            app:iconGravity="start"
                            app:iconTint="@color/primary_grey"
                            app:iconSize="16dp"
                            app:cornerRadius="20dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="@android:color/transparent"
                            app:strokeColor="@color/secondary_grey"
                            app:strokeWidth="1dp"
                            android:minWidth="0dp" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Date Card -->
            <LinearLayout
                android:id="@+id/cardDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar_24dp"
                    app:tint="@color/primary_grey" />
            </LinearLayout>

            <!-- Note Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/note"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="@string/note_hint"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:padding="0dp" />
            </LinearLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/save"
                android:textColor="@color/primary_white"
                android:backgroundTint="@color/primary_green"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                android:textAllCaps="false"
                app:elevation="0dp"
                app:strokeWidth="0dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
