<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_white"
    tools:context=".fragments.CategoryFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header similar to budget detail: back + title + edit -->
            <LinearLayout
                android:id="@+id/category_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_icon_button"
                    android:paddingLeft="8dp"
                    android:src="@drawable/ic_arrow_back_24dp"
                    app:tint="@color/primary_black"
                    android:contentDescription="@string/cancel" />

                <TextView
                    android:id="@+id/tv_category_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/categories"
                    android:textColor="@color/primary_black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/btn_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_icon_button"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_24dp"
                    app:tint="@color/primary_grey"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_icon_button"
                    android:padding="8dp"
                    android:src="@drawable/ic_edit_square_24dp"
                    app:tint="@color/primary_grey"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Search and all categories label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="24dp"
                android:layout_marginTop="8dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_search_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    android:padding="12dp"
                    android:hint="@string/search_categories"
                    android:textColor="@color/primary_black"
                    android:textColorHint="@color/primary_grey"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_search_24dp"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/tv_all_categories_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_categories"
                    android:textColor="@color/primary_grey"
                    android:layout_margin="8dp"
                    android:textSize="14sp" />
            </LinearLayout>

             <!-- Grid layout below -->
             <GridLayout
                 android:id="@+id/grid_all_categories"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="24dp"
                 android:layout_marginEnd="24dp"
                 android:columnCount="4"
                 android:useDefaultMargins="true" />

             <TextView
                 android:id="@+id/tv_empty_categories"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="16dp"
                 android:text="@string/no_categories_available"
                 android:textColor="@color/primary_grey"
                 android:textSize="14sp"
                 android:gravity="center"
                 android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
