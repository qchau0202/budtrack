<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <!-- Drag Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_sheet_drag_handle"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Header with Title and Close -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tiền mặt"
                android:textColor="@color/primary_black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="Đóng"
                android:textColor="@color/primary_black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Wallet Icon + Name -->
        <LinearLayout
            android:id="@+id/layout_wallet_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_card"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iv_wallet_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_wallet_cash"
                app:tint="@color/primary_green" />

            <TextView
                android:id="@+id/tv_wallet_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Tiền mặt"
                android:textColor="@color/primary_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_icon_dropdown"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down_24dp"
                app:tint="@color/primary_grey" />
        </LinearLayout>

        <!-- Balance Edit Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số dư"
                android:textColor="@color/primary_grey"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edit_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Nhập số dư mới"
                android:inputType="numberSigned"
                android:minHeight="48dp"
                android:padding="0dp"
                android:textColor="@color/primary_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VND"
                android:textColor="@color/primary_grey"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Toggles Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:labelFor="@+id/switch_notification">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bật thông báo"
                        android:textColor="@color/primary_black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhận thông báo khi ví có giao dịch mới."
                        android:textColor="@color/primary_grey"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/primary_green"
                    app:trackTint="@color/primary_grey" />
            </LinearLayout>

            <!-- Exclude from total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:labelFor="@+id/switch_exclude_total">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Không tính vào tổng"
                        android:textColor="@color/primary_black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bỏ qua ví này và số dư khỏi &quot;Tổng&quot;."
                        android:textColor="@color/primary_grey"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_exclude_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/primary_green"
                    app:trackTint="@color/primary_grey" />
            </LinearLayout>

            <!-- Archive -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:labelFor="@+id/switch_archive">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lưu trữ"
                        android:textColor="@color/primary_black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đóng băng ví này và ngừng tạo ra giao dịch định kỳ &amp; hóa đơn."
                        android:textColor="@color/primary_grey"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_archive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/primary_green"
                    app:trackTint="@color/primary_grey" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_transfer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:text="Chuyển tiền đến ví khác"
            android:textColor="@color/primary_white"
            android:backgroundTint="@color/primary_green"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            app:elevation="0dp"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Xóa"
            android:textColor="@color/primary_white"
            android:backgroundTint="@color/primary_red"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            app:elevation="0dp"
            app:strokeWidth="0dp" />

    </LinearLayout>
</ScrollView>