<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card"
    android:padding="24dp">

    <!-- Header: title + close -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/transactions"
            android:textColor="@color/primary_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_icon_button"
            android:padding="6dp"
            android:src="@drawable/ic_close_24dp"
            app:tint="@color/primary_black" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/secondary_grey" />

    <!-- Transaction main row: icon + name + amount -->
    <LinearLayout
        android:id="@+id/row_transaction_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_transaction_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_wallet_24dp"
            android:background="@drawable/bg_icon_button"
            android:padding="8dp"
            app:tint="@color/primary_green" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_transaction_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/primary_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_transaction_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/primary_grey"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_hint"
            android:textColor="@color/secondary_green"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Date and note -->
    <LinearLayout
        android:id="@+id/row_transaction_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/primary_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_transaction_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textColor="@color/primary_grey"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Actions: Edit / Delete -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_delete_button"
            android:textAllCaps="false"
            android:textColor="@color/primary_white"
            android:backgroundTint="@color/primary_red" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:textColor="@color/primary_white"
            android:backgroundTint="@color/primary_green" />
    </LinearLayout>

</LinearLayout>


