<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="20dp"
    android:paddingBottom="24dp">

    <!-- Drag handle -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@drawable/bottom_sheet_drag_handle"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Expense name -->
    <TextView
        android:id="@+id/tv_expense_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:textColor="@color/primary_black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_close_details" />

    <!-- Close button -->
    <ImageButton
        android:id="@+id/btn_close_details"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_icon_button"
        android:padding="6dp"
        android:src="@drawable/ic_close_24dp"
        app:tint="@color/primary_black"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Address -->
    <TextView
        android:id="@+id/tv_expense_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="450 Rhode Island Street, San Francisco"
        android:textColor="@color/primary_grey"
        android:textSize="15sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_expense_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category chip and amount row -->
    <LinearLayout
        android:id="@+id/row_category_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_expense_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Category chip -->
        <TextView
            android:id="@+id/tv_expense_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textColor="@color/primary_black"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/bg_category_chip"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Expense amount -->
        <TextView
            android:id="@+id/tv_expense_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150,000 VND"
            android:textColor="@color/primary_green"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Date and note row -->
    <LinearLayout
        android:id="@+id/row_date_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/row_category_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Date -->
        <TextView
            android:id="@+id/tv_expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01 Jan 2025"
            android:textColor="@color/primary_grey"
            android:textSize="13sp"
            android:layout_marginBottom="4dp" />

        <!-- Note -->
        <TextView
            android:id="@+id/tv_expense_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch with team"
            android:textColor="@color/primary_grey"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

        <!-- View details button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/view_details"
            android:textColor="@color/primary_white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_green"
            android:layout_marginTop="18dp"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/row_date_note"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

