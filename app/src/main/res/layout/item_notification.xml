<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:id="@+id/card_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <!-- Unread Badge - positioned to the left of icon -->
        <View
            android:id="@+id/badge_unread"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_unread_badge"
            android:visibility="gone" />

        <!-- Notification Icon with circular colored background -->
        <ImageView
            android:id="@+id/iv_notification_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_notifications_24dp"
            app:tint="@color/primary_white" />

        <!-- Notification Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder"
                android:textColor="@color/primary_black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_notification_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Don't forget to input your expenses today!"
                android:textColor="@color/primary_black"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="10:00 AM"
                android:textColor="@color/primary_grey"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
