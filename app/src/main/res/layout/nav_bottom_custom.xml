<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/primary_white">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home_24dp"
            app:tint="@color/nav_icon_color"/>

    </LinearLayout>

    <!-- Dashboard (Analytics) -->
    <LinearLayout
        android:id="@+id/nav_dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_dashboard_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_analytics_24dp"
            app:tint="@color/nav_icon_color"/>

    </LinearLayout>

    <!-- Spacer for FAB -->
    <View
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"/>

    <!-- Budget -->
    <LinearLayout
        android:id="@+id/nav_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_wallet_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wallet_24dp"
            app:tint="@color/nav_icon_color" />

    </LinearLayout>

    <!-- Profile -->
    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_profile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_account_box_24dp"
            app:tint="@color/nav_icon_color"/>

    </LinearLayout>

</LinearLayout>

