<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_transactions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:layout_marginBottom="12dp">

    <!-- Header row with title and date pill -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_spent"
                android:textColor="@color/primary_black"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_month_total_spend"
                android:textColor="@color/primary_grey"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Income list (dynamically populated) -->
    <LinearLayout
        android:id="@+id/list_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp" />

    <!-- Expenses list (dynamically populated) -->
    <LinearLayout
        android:id="@+id/list_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp" />

    <!-- Empty State -->
                <TextView
        android:id="@+id/tv_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/no_transactions"
        android:textColor="@color/primary_grey"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_all_transactions"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:text="@string/view_all_transactions"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/primary_white"
        android:backgroundTint="@color/primary_green"
        app:cornerRadius="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp" />

</LinearLayout>

