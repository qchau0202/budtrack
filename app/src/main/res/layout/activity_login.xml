<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activities.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_green"
        android:padding="24dp">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/icon_lock"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_budtrack"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:gravity="center"
            android:textColor="@color/primary_black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_subtitle"
            android:textColor="@color/primary_grey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/quicksand" />

    </LinearLayout>

    <!-- Input Fields Section -->
    <LinearLayout
        android:id="@+id/input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <!-- Email Input -->
        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_label"
            android:textColor="@color/primary_black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            app:endIconMode="clear_text"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="@color/primary_grey"
            app:boxBackgroundColor="@color/primary_white"
            app:cursorColor="@color/primary_grey"
            app:placeholderTextColor="@color/primary_black"
            app:hintTextColor="@color/primary_black"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/quicksand"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <TextView
            android:id="@+id/label_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_label"
            android:textColor="@color/primary_black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            app:endIconMode="password_toggle"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="@color/primary_grey"
            app:boxBackgroundColor="@color/primary_white"
            app:cursorColor="@color/primary_grey"
            app:placeholderTextColor="@color/primary_black"
            app:hintTextColor="@color/primary_black"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:maxLength="20"
                android:layout_height="56dp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/quicksand"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Sign Up Link -->
    <LinearLayout
        android:id="@+id/signup_link_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/input_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_no_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_account"
            android:textColor="@color/primary_grey"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/quicksand"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_link"
            android:textColor="@color/primary_green"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/btn_login"
        android:textColor="@color/primary_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_green"
        android:fontFamily="@font/quicksand"
        app:cornerRadius="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/signup_link_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OR Divider -->
    <LinearLayout
        android:id="@+id/or_divider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/primary_grey"
            android:alpha="0.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textColor="@color/primary_grey"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/primary_grey"
            android:alpha="0.3" />

    </LinearLayout>

    <!-- Sign up with Google Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_up_google"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/sign_up_with_google"
        android:textColor="@color/primary_black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_white"
        app:icon="@drawable/ic_google_24dp"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@null"
        app:cornerRadius="12dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/or_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
