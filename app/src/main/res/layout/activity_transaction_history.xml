<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_white"
    android:padding="24dp"
    tools:context=".activities.TransactionHistoryActivity">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:paddingLeft="6dp"
            android:src="@drawable/ic_arrow_back_24dp"
            app:tint="@color/primary_black" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/transactions"
            android:textColor="@color/primary_black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:padding="12dp"
            android:scaleType="center"
            app:tint="@color/primary_grey"
            android:src="@drawable/ic_search_24dp"
            app:layout_constraintEnd_toStartOf="@id/btn_map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:padding="12dp"
            android:scaleType="center"
            app:tint="@color/primary_grey"
            android:src="@drawable/ic_filter_alt_24dp"
            app:layout_constraintEnd_toStartOf="@id/btn_map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

    <!--Tabs -->
    <LinearLayout
        android:id="@+id/filters_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabExpense"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/expense"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/primary_white"
                app:cornerRadius="20dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/primary_green" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabIncome"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/income"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/primary_black"
                app:cornerRadius="20dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/secondary_grey" />

        </LinearLayout>
    <!-- RecyclerView for Transactions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_transactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/filters_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_daily_transaction_group" />

</androidx.constraintlayout.widget.ConstraintLayout>

