<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Budget Title Section -->
            <LinearLayout
                android:id="@+id/budget_title_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_icon_button"
                    android:paddingLeft="8dp"
                    android:src="@drawable/ic_arrow_back_24dp"
                    app:tint="@color/primary_black"
                    android:contentDescription="@string/cancel" />

                <TextView
                    android:id="@+id/tv_budget_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Daily Budget"
                    android:textColor="@color/primary_black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_icon_button"
                    android:padding="8dp"
                    android:src="@drawable/ic_edit_square_24dp"
                    app:tint="@color/primary_grey"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Balance Section -->
            <LinearLayout
                android:id="@+id/balance_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_balance"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_balance_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10,000,000 VND"
                        android:textColor="@color/primary_black"
                        android:textStyle="bold"
                        android:textSize="32sp" />

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_balance"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:progressDrawable="@drawable/progress_bar_budget"
                    android:max="100"
                    android:progress="19" />

                <TextView
                    android:id="@+id/tv_spent_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="1,900,000 of 10,000,000 VND spent"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Transaction History based on Budget -->
            <include
                android:id="@+id/transaction_history_view"
                layout="@layout/view_general_transaction_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
