<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_white"
    tools:context=".fragments.BudgetFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/budget_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/budget_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">
            <include layout="@layout/view_header" />

            <!-- Total Budget Card -->
            <LinearLayout
                android:id="@+id/card_total_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/tv_total_budget_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_budget"
                    android:textColor="@color/primary_black"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tv_total_budget_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/amount_hint"
                        android:textColor="@color/primary_black"
                        android:textStyle="bold"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/tv_total_budget_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount_hint"
                        android:textColor="@color/primary_black"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_total_budget"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:progressDrawable="@drawable/progress_bar_total"
                    android:max="100"
                    android:progress="19" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tv_total_spent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/amount_hint"
                        android:textColor="@color/primary_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_total_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount_hint"
                        android:textColor="@color/primary_black"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/secondary_grey" />

            <!-- Add Budget Button -->
            <LinearLayout
                android:id="@+id/btn_add_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add_circle_24dp"
                    app:tint="@color/primary_green"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_budget"
                        android:textColor="@color/primary_black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/add_budget_description"
                        android:textColor="@color/primary_grey"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward_24dp"
                    app:tint="@color/primary_grey" />
            </LinearLayout>

            <!-- Daily Budget Card -->
            <include
                android:id="@+id/card_daily_budget"
                layout="@layout/view_budget_card" />

            <!-- Personal Budget Card -->
            <include
                android:id="@+id/card_personal_budget"
                layout="@layout/view_budget_card" />

            <!-- Others Budget Card -->
            <include
                android:id="@+id/card_others_budget"
                layout="@layout/view_budget_card" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
